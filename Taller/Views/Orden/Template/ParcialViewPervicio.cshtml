@model List<Taller.Dtos.ShowServicioDto>


<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">

                <div style="width:100%; margin-top:10px;">

                    <h5 class="modal-title" id="exampleModalLongTitle" style="text-align:center;">Servicios</h5>

                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <div class="modal-body">

                <table class="table">

                    <thead>

                        <tr>

                            <td>@Html.Label("CÓDIGO")</td>
                            <td>@Html.Label("NOMBRE")</td>
                            <td>@Html.Label("COSTO")</td>

                        </tr>

                    </thead>

                    <tbody>

                        @foreach (Taller.Dtos.ShowServicioDto servicio in Model)
                        {
                            <tr>


                                <td> @servicio.Codigo </td>
                                <td> @servicio.Nombre </td>
                                <td> @servicio.Costo </td>

                            </tr>
                        }

                    </tbody>

                </table>


            </div>

        </div>

    </div>

</div>
