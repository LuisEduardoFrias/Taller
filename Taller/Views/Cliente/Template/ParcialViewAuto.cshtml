@model List<Taller.Dtos.ShowAutoDto>


<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">

                <div style="width:100%; margin-top:10px;">

                    <h5 class="modal-title" id="exampleModalLongTitle" style="text-align:center;">ORDENES</h5>

                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <div class="modal-body">

                <table class="table">

                    <thead>

                        <tr>

                            <td>@Html.Label("MARCA")</td>
                            <td>@Html.Label("MODELO")</td>
                            <td>@Html.Label("AÑO")</td>
                            <td>@Html.Label("COLOR")</td>
                            <td>@Html.Label("PLACA")</td>
                            <td>@Html.Label("CLIENTE")</td>
                            <td>@Html.Label("OPCIONES")</td>

                        </tr>

                    </thead>

                    <tbody>


                        @foreach (Taller.Dtos.ShowAutoDto auto in Model)
                        {
                            <tr>

                                <td> @auto.Marca </td>
                                <td> @auto.Modelo </td>
                                <td> @auto.Años </td>
                                <td> @auto.Color </td>
                                <td> @auto.Placa </td>
                                <td> @auto.Cliente_</td>
                                <td>
                                    @Html.ActionLink("Editar", "UpdateAuto", null, new { @class = "btn btn-success btn-lg" })
                                </td>

                            </tr>
                        }

                    </tbody>

                </table>


            </div>

        </div>

    </div>

</div>

